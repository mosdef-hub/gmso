<ForceField version="0.0.1" name="DPD-Harmonic">
    <FFMetaData combiningRule="lorentz">
        <Units energy="energy" distance="length" mass="amu" charge="charge"/>
    </FFMetaData>
    <AtomTypes>
       <AtomType name="A" element="A" atomclass="A" mass="1.0" charge="0.0" definition="A" description="CG Bead">
       </AtomType>
    </AtomTypes>
    <BondTypes name="HarmonicBond" expression="0.5 * k * (r-r_eq)**2">
        <ParametersUnitDef parameter="r_eq" unit="nm"/>
        <ParametersUnitDef parameter="k" unit="kJ/mol"/>
        <BondType name="HOOMDHarmonicBondPotential" type1='A' type2='A'>
            <Parameters>
                <Parameter name='r_eq' value="10.0"/>
                <Parameter name='k' value="10000"/>
            </Parameters>
        </BondType>
    </BondTypes>


#DPD is a pair force, only part is a pair potential
