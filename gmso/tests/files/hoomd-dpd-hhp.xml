    <ParametersUnitDef parameter="A" unit="N"/>
    <ParametersUnitDef parameter="r_cut" unit="nm"/>
    <PairPotentialType name="HOOMDDPDConservativePotential" type1="A" type2="A">
        <Parameters>
            <Parameter name="A" value="40.0"/>
            <Parameter name="r_cut" value="1.0"/>
